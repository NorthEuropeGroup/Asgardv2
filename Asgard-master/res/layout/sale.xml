<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/repeat_bk"
    android:orientation="vertical"
    android:weightSum="800" >

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="fill_parent"
       
       android:layout_weight="182" >
       
                      

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical" >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
              
               android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                >

               <ImageView
                   android:id="@+id/imageView1"
                   android:layout_height="55dp"
                   android:layout_width="wrap_content"
                   
                   android:layout_weight="50"
                   android:src="@drawable/shop_money_2" />

               <ImageButton
                   android:id="@+id/sale_button"
                   android:layout_width="wrap_content"
                   android:layout_height="55dp"
                     android:layout_weight="1"
                   android:background="#00000000"
                   
                   android:scaleType="centerInside"
                   android:src="@drawable/sale_button" />

           </LinearLayout>

               <GridView
                   android:id="@+id/gridView"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:columnWidth="@dimen/itemSize"
                   android:gravity="center"
                   android:horizontalSpacing="4dp"
                   android:numColumns="4"
                   android:paddingLeft="15dp"
                   android:paddingRight="15dp"
                   android:paddingTop="10dp"
                   android:scrollbarStyle="outsideInset"
                   android:scrollbars="vertical"
                   android:stretchMode="columnWidth"
                   android:verticalSpacing="4dp" />

       </LinearLayout>

         <TextView
             android:id="@+id/sale_money"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:paddingTop="35dp"
             android:text="TextView"
             android:textColor="@color/yellow" />

   </RelativeLayout><RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="618"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
         >
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:weightSum="480" >
            
             <ImageButton
                 android:id="@+id/imageButton1"
                 android:layout_height="match_parent"
                 android:layout_width="wrap_content"
                 android:background="#00000000"
                 android:scaleType="centerInside"
                 android:src="@drawable/menu_02" 
                 android:layout_weight="128"
                 />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="115"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/menu_03" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="116"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/menu_04" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="121"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/menu_05" />
 
        </LinearLayout>

     </RelativeLayout>



</LinearLayout>

