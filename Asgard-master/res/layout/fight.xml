<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/repeat_bk"
	android:orientation="vertical"
	android:weightSum="600" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="350"
		android:orientation="horizontal" 
		android:weightSum="400"
		>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="121"
			android:orientation="vertical"
			android:weightSum="220" >

			<ImageView
			    android:id="@+id/rC1"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_weight="40"
			    android:src="@drawable/card01" />

			<ProgressBar
			    android:id="@+id/rB1"
			    style="?android:attr/progressBarStyleHorizontal"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="90" />

			<Button
			    android:id="@+id/rCB1"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="90"
			    android:text="Choose" />

		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="158" >

		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="121" 
			android:orientation="vertical"
			android:weightSum="220">
		<ImageView
			    android:id="@+id/rC2"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:src="@drawable/card01"
			    android:layout_weight="40" />

		<ProgressBar
		    android:id="@+id/rB2"
		    style="?android:attr/progressBarStyleHorizontal"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="90" />

			<Button
			    android:id="@+id/rCB2"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="90"
			    android:text="Choose" />

		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="250"
		android:orientation="horizontal" 
		android:weightSum="400" >
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="121" 
			android:orientation="vertical"
			android:weightSum="390">

			<ImageView
			    android:id="@+id/C1"
			    android:layout_width="wrap_content"
			    android:layout_height="180dp"
			    android:layout_weight="30"
			    android:src="@drawable/card01" />

			<ProgressBar
			    android:id="@+id/B1"
			    style="?android:attr/progressBarStyleHorizontal"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="210" />

			<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:layout_weight="150" >

				<ImageButton
				    android:id="@+id/atk1"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:src="@drawable/fight_atk"
				    android:layout_weight="50" />
				<ImageButton
				    android:id="@+id/def1"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:src="@drawable/fight_def"
				    android:layout_weight="50" />
				<ImageButton
				    android:id="@+id/skill1"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:src="@drawable/fight_skill"
				    android:layout_weight="50" />
			</LinearLayout>
			
		</LinearLayout>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="158"
		    android:gravity="center|bottom" >

			<TextView
			    android:id="@+id/Time"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:gravity="bottom"
			    android:text="30"
			    android:textAppearance="?android:attr/textAppearanceLarge"
			    android:textSize="35dp" />

		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="121" 
			android:orientation="vertical"
			android:weightSum="390">
	<ImageView
			    android:id="@+id/C2"
			    android:layout_width="wrap_content"
			    android:layout_height="180dp"
			    android:src="@drawable/card01"
			    android:layout_weight="30" />
			<ProgressBar
			    android:id="@+id/B2"
			    style="?android:attr/progressBarStyleHorizontal"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="210" />
			<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:layout_weight="150" >
			<ImageButton
				    android:id="@+id/atk2"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:src="@drawable/fight_atk"
				    android:layout_weight="50" />
				<ImageButton
				    android:id="@+id/def2"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:src="@drawable/fight_def"
				    android:layout_weight="50" />
				<ImageButton
				    android:id="@+id/skill2"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:src="@drawable/fight_skill"
				    android:layout_weight="50" />
			</LinearLayout>
			
		</LinearLayout>
	</LinearLayout>

</LinearLayout>



