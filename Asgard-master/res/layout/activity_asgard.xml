<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/repeat_bk"
    android:orientation="vertical"
    android:weightSum="800" >



   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="fill_parent"
       android:layout_weight="182" >

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical" >

           <ImageView
               android:id="@+id/imageView1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:scaleType="centerInside"
               android:src="@drawable/menu_01" />
       </LinearLayout>

       <TextView
           android:id="@+id/name"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="90dp"
           android:paddingTop="16dp"
           android:text="貝斯特拉"
           android:textColor="@color/white" />

       <TextView
           android:id="@+id/money"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:paddingLeft="120dp"
           android:paddingTop="37dp"
           android:text="100"
           android:textColor="@color/yellow" />

       <ImageButton
           android:id="@+id/delete"
           android:layout_width="46dp"
           android:layout_height="35dp"
           android:layout_alignParentRight="true"
            android:background="#00000000"
            android:layout_marginTop="17dp"
           
           android:layout_marginRight="27dp"
           android:src="@drawable/delete_icon"
           android:scaleType="centerInside"
           android:text="刪除" />

       <ImageButton
           android:id="@+id/rename"
           android:layout_width="46dp"
           android:layout_height="35dp"
           android:layout_alignBaseline="@+id/delete"
           android:layout_marginTop="15dp"
           android:layout_marginRight="5dp"
           android:layout_alignBottom="@+id/delete"
           android:layout_toLeftOf="@+id/delete"
           android:background="#00000000"
           android:scaleType="centerInside"
           android:src="@drawable/rename_icon"
           android:text="改名" />

   </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="618"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
         >
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:weightSum="480" >
            
             <ImageButton
                 android:id="@+id/imageButton1"
                 android:layout_height="match_parent"
                 android:layout_width="wrap_content"
                 android:background="#00000000"
                 android:scaleType="centerInside"
                 android:src="@drawable/menu_02" 
                 android:layout_weight="128"
                 />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="115"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/menu_03" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="116"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/menu_04" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="121"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/menu_05" />
 
        </LinearLayout>

     </RelativeLayout>



</LinearLayout>

